                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Configuration"
                android:textColor="@color/drawer_text"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/text_grey_color" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selected"
                android:clickable="true"
                android:drawableLeft="@drawable/drawer_delete"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Delete"
                android:textColor="@color/drawer_text"
                android:textSize="20dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selected"
                android:clickable="true"
                android:drawableLeft="@drawable/backuphistory"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Backup History"
                android:textColor="@color/drawer_text"
                android:textSize="20dp"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/text_grey_color" />


            <TextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selected"
                android:clickable="true"
                android:drawableLeft="@drawable/drawer_help"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Help"
                android:textColor="@color/drawer_text"
                android:textSize="20dp"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/iv_logout_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/text_grey_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selected"
                android:clickable="true"
                android:drawableLeft="@drawable/drawer_logout"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Logout"
                android:textColor="@color/drawer_text"
                android:textSize="20dp"
                android:visibility="gone" />
